{% comment %}
  Minimal Cart Section
  Clean, Apple-inspired design matching the hero aesthetic
{% endcomment %}

<script src="{{ 'component-cart-items.js' | asset_url }}" type="module" fetchpriority="low"></script>
<script src="{{ 'component-cart-quantity-selector.js' | asset_url }}" type="module" fetchpriority="low"></script>

<cart-items-component class="cart-minimal" data-section-id="{{ section.id }}">
  <div class="cart-minimal__container">
    {% if cart.empty? %}
      <!-- Empty Cart State -->
      <div class="cart-minimal__empty">
        <h1 class="cart-minimal__empty-title">Your cart is empty</h1>
        <p class="cart-minimal__empty-subtitle">Add something to get started.</p>
        <a href="{{ routes.root_url }}" class="cart-minimal__empty-btn">
          Continue Shopping
        </a>
      </div>
    {% else %}
      <!-- Cart Header -->
      <header class="cart-minimal__header">
        <h1 class="cart-minimal__title">Your Cart</h1>
        <span class="cart-minimal__count">{{ cart.item_count }} {{ cart.item_count | pluralize: 'item', 'items' }}</span>
      </header>

      <!-- Cart Items -->
      <form action="{{ routes.cart_url }}" method="post" id="cart-form" class="cart-minimal__form">
        <div class="cart-minimal__items">
          {% for item in cart.items %}
            <div class="cart-minimal__item" ref="cartItemRows[]" data-key="{{ item.key }}">
              {% if item.image %}
                <a href="{{ item.url }}" class="cart-minimal__item-image">
                  {{ item.image | image_url: width: 200 | image_tag: loading: 'lazy' }}
                </a>
              {% endif %}

              <div class="cart-minimal__item-details">
                <a href="{{ item.url }}" class="cart-minimal__item-title">
                  {{ item.product.title }}
                </a>

                {% if item.product.has_only_default_variant == false %}
                  <p class="cart-minimal__item-variant">
                    {% for option in item.options_with_values %}
                      {{ option.value }}{% unless forloop.last %} / {% endunless %}
                    {% endfor %}
                  </p>
                {% endif %}

                <p class="cart-minimal__item-price">{{ item.original_price | money }}</p>
              </div>

              <div class="cart-minimal__item-actions">
                <div class="cart-minimal__quantity">
                  <button
                    type="button"
                    class="cart-minimal__qty-btn"
                    on:click="/onQuantityChange/{{ item.index | plus: 1 }}/{{ item.quantity | minus: 1 }}"
                    aria-label="Decrease quantity"
                    {% if item.quantity <= 1 %}disabled{% endif %}
                  >
                    <svg width="12" height="2" viewBox="0 0 12 2" fill="none">
                      <path d="M0 1h12" stroke="currentColor" stroke-width="1.5"/>
                    </svg>
                  </button>
                  <span class="cart-minimal__qty-value">{{ item.quantity }}</span>
                  <button
                    type="button"
                    class="cart-minimal__qty-btn"
                    on:click="/onQuantityChange/{{ item.index | plus: 1 }}/{{ item.quantity | plus: 1 }}"
                    aria-label="Increase quantity"
                  >
                    <svg width="12" height="12" viewBox="0 0 12 12" fill="none">
                      <path d="M6 0v12M0 6h12" stroke="currentColor" stroke-width="1.5"/>
                    </svg>
                  </button>
                </div>

                <button
                  type="button"
                  class="cart-minimal__remove"
                  on:click="/onLineItemRemove/{{ item.index | plus: 1 }}"
                  aria-label="Remove {{ item.title }}"
                >
                  Remove
                </button>
              </div>

              <div class="cart-minimal__item-total">
                {{ item.final_line_price | money }}
              </div>
            </div>
          {% endfor %}
        </div>

        <!-- Cart Footer -->
        <footer class="cart-minimal__footer">
          <div class="cart-minimal__subtotal">
            <span class="cart-minimal__subtotal-label">Subtotal</span>
            <span class="cart-minimal__subtotal-value">{{ cart.total_price | money }}</span>
          </div>
          <p class="cart-minimal__shipping-note">Shipping calculated at checkout</p>
          <button type="submit" name="checkout" class="cart-minimal__checkout-btn">
            Checkout
          </button>
        </footer>
      </form>
    {% endif %}
  </div>
</cart-items-component>

<style>
  .cart-minimal {
    --cart-bg: #FAFAFA;
    --cart-text: #1D1D1F;
    --cart-text-muted: #86868B;

    min-height: 60vh;
    background: var(--cart-bg);
    color: var(--cart-text);
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', sans-serif;
  }

  .cart-minimal__container {
    max-width: 680px;
    margin: 0 auto;
    padding: 60px 24px 80px;
  }

  /* Empty State */
  .cart-minimal__empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 80px 24px;
  }

  .cart-minimal__empty-title {
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 600;
    letter-spacing: -0.02em;
    margin: 0 0 12px;
    color: var(--cart-text);
  }

  .cart-minimal__empty-subtitle {
    font-size: 1.1rem;
    color: var(--cart-text-muted);
    margin: 0 0 32px;
  }

  .cart-minimal__empty-btn {
    display: inline-flex;
    padding: 14px 28px;
    background: var(--cart-text);
    color: var(--cart-bg);
    border-radius: 980px;
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    transition: transform 0.2s ease, opacity 0.2s ease;
  }

  .cart-minimal__empty-btn:hover {
    transform: scale(1.03);
  }

  /* Cart Header */
  .cart-minimal__header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 40px;
    padding-bottom: 20px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }

  .cart-minimal__title {
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 600;
    letter-spacing: -0.02em;
    margin: 0;
  }

  .cart-minimal__count {
    font-size: 0.9rem;
    color: var(--cart-text-muted);
  }

  /* Cart Items */
  .cart-minimal__items {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .cart-minimal__item {
    display: grid;
    grid-template-columns: 80px 1fr auto;
    grid-template-rows: auto auto;
    gap: 0 20px;
    padding: 24px 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    align-items: start;
  }

  .cart-minimal__item-image {
    grid-row: 1 / -1;
    width: 80px;
    aspect-ratio: 1;
    border-radius: 8px;
    overflow: hidden;
    background: #f0f0f0;
  }

  .cart-minimal__item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart-minimal__item-details {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .cart-minimal__item-title {
    font-size: 1rem;
    font-weight: 500;
    color: var(--cart-text);
    text-decoration: none;
  }

  .cart-minimal__item-title:hover {
    opacity: 0.7;
  }

  .cart-minimal__item-variant {
    font-size: 0.85rem;
    color: var(--cart-text-muted);
    margin: 0;
  }

  .cart-minimal__item-price {
    font-size: 0.9rem;
    color: var(--cart-text-muted);
    margin: 4px 0 0;
  }

  .cart-minimal__item-actions {
    display: flex;
    align-items: center;
    gap: 16px;
    grid-column: 2;
    margin-top: 12px;
  }

  .cart-minimal__quantity {
    display: flex;
    align-items: center;
    gap: 0;
    border: 1px solid rgba(0, 0, 0, 0.12);
    border-radius: 6px;
  }

  .cart-minimal__qty-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: transparent;
    border: none;
    cursor: pointer;
    color: var(--cart-text);
    transition: opacity 0.15s;
  }

  .cart-minimal__qty-btn:hover {
    opacity: 0.6;
  }

  .cart-minimal__qty-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .cart-minimal__qty-value {
    min-width: 32px;
    text-align: center;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .cart-minimal__remove {
    background: none;
    border: none;
    font-size: 0.8rem;
    color: var(--cart-text-muted);
    cursor: pointer;
    padding: 0;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .cart-minimal__remove:hover {
    color: var(--cart-text);
  }

  .cart-minimal__item-total {
    font-size: 1rem;
    font-weight: 500;
    text-align: right;
  }

  /* Footer */
  .cart-minimal__footer {
    margin-top: 40px;
    padding-top: 24px;
  }

  .cart-minimal__subtotal {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 8px;
  }

  .cart-minimal__subtotal-label {
    font-size: 1rem;
    font-weight: 500;
  }

  .cart-minimal__subtotal-value {
    font-size: 1.25rem;
    font-weight: 600;
  }

  .cart-minimal__shipping-note {
    font-size: 0.85rem;
    color: var(--cart-text-muted);
    margin: 0 0 24px;
  }

  .cart-minimal__checkout-btn {
    width: 100%;
    padding: 16px 32px;
    background: var(--cart-text);
    color: var(--cart-bg);
    border: none;
    border-radius: 980px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: transform 0.2s ease, opacity 0.2s ease;
  }

  .cart-minimal__checkout-btn:hover {
    transform: scale(1.01);
  }

  .cart-minimal__checkout-btn:active {
    transform: scale(0.99);
  }

  /* Mobile adjustments */
  @media screen and (max-width: 600px) {
    .cart-minimal__container {
      padding: 40px 20px 60px;
    }

    .cart-minimal__item {
      grid-template-columns: 64px 1fr;
      gap: 0 16px;
    }

    .cart-minimal__item-image {
      width: 64px;
    }

    .cart-minimal__item-total {
      grid-column: 2;
      text-align: left;
      margin-top: 8px;
    }

    .cart-minimal__item-actions {
      grid-column: 2;
    }
  }
</style>

{% schema %}
{
  "name": "Minimal Cart",
  "tag": "section",
  "class": "cart-minimal-section"
}
{% endschema %}
