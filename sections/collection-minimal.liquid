{% comment %}
  Minimal Collection Section
  Clean, Apple-inspired design for a small product catalog
{% endcomment %}

<section class="collection-minimal">
  <div class="collection-minimal__container">
    <!-- Header -->
    <header class="collection-minimal__header">
      <h1 class="collection-minimal__title">{{ collection.title | default: 'Products' }}</h1>
      {% if collection.description != blank %}
        <p class="collection-minimal__description">{{ collection.description }}</p>
      {% endif %}
    </header>

    <!-- Products -->
    {% if collection.products.size > 0 %}
      <div class="collection-minimal__products">
        {% for product in collection.products %}
          <a href="{{ product.url }}" class="collection-minimal__product">
            <div class="collection-minimal__product-image">
              {% if product.featured_image %}
                {{ product.featured_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
              {% else %}
                <div class="collection-minimal__placeholder"></div>
              {% endif %}
            </div>

            <div class="collection-minimal__product-info">
              <h2 class="collection-minimal__product-title">{{ product.title }}</h2>
              {% if product.description != blank %}
                <p class="collection-minimal__product-desc">
                  {{ product.description | strip_html | truncate: 120 }}
                </p>
              {% endif %}
              <p class="collection-minimal__product-price">
                {% if product.compare_at_price > product.price %}
                  <span class="collection-minimal__compare-price">{{ product.compare_at_price | money }}</span>
                {% endif %}
                {{ product.price | money }}
              </p>
            </div>
          </a>
        {% endfor %}
      </div>
    {% else %}
      <!-- Empty State -->
      <div class="collection-minimal__empty">
        <p class="collection-minimal__empty-text">No products yet.</p>
        <a href="{{ routes.root_url }}" class="collection-minimal__empty-btn">Back to home</a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .collection-minimal {
    --col-bg: #FAFAFA;
    --col-text: #1D1D1F;
    --col-text-muted: #86868B;

    min-height: 60vh;
    background: var(--col-bg);
    color: var(--col-text);
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', sans-serif;
  }

  .collection-minimal__container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 60px 24px 100px;
  }

  /* Header */
  .collection-minimal__header {
    text-align: center;
    margin-bottom: 60px;
  }

  .collection-minimal__title {
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 600;
    letter-spacing: -0.02em;
    margin: 0 0 16px;
    color: var(--col-text);
  }

  .collection-minimal__description {
    font-size: 1.1rem;
    color: var(--col-text-muted);
    margin: 0;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.5;
  }

  /* Products Grid */
  .collection-minimal__products {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
  }

  .collection-minimal__product {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: var(--col-text);
    transition: opacity 0.2s ease;
  }

  .collection-minimal__product:hover {
    opacity: 0.85;
  }

  .collection-minimal__product-image {
    aspect-ratio: 1;
    border-radius: 16px;
    overflow: hidden;
    background: #f0f0f0;
    margin-bottom: 20px;
  }

  .collection-minimal__product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .collection-minimal__product:hover .collection-minimal__product-image img {
    transform: scale(1.02);
  }

  .collection-minimal__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  }

  .collection-minimal__product-info {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .collection-minimal__product-title {
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    margin: 0;
    color: var(--col-text);
  }

  .collection-minimal__product-desc {
    font-size: 0.95rem;
    color: var(--col-text-muted);
    margin: 0;
    line-height: 1.5;
  }

  .collection-minimal__product-price {
    font-size: 1rem;
    font-weight: 500;
    margin: 4px 0 0;
    color: var(--col-text);
  }

  .collection-minimal__compare-price {
    color: var(--col-text-muted);
    text-decoration: line-through;
    margin-right: 8px;
    font-weight: 400;
  }

  /* Empty State */
  .collection-minimal__empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 80px 24px;
  }

  .collection-minimal__empty-text {
    font-size: 1.1rem;
    color: var(--col-text-muted);
    margin: 0 0 24px;
  }

  .collection-minimal__empty-btn {
    display: inline-flex;
    padding: 14px 28px;
    background: var(--col-text);
    color: var(--col-bg);
    border-radius: 980px;
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    transition: transform 0.2s ease;
  }

  .collection-minimal__empty-btn:hover {
    transform: scale(1.03);
  }

  /* Single product - center it */
  .collection-minimal__products:has(> :only-child) {
    grid-template-columns: 1fr;
    max-width: 480px;
    margin: 0 auto;
  }

  /* Mobile */
  @media screen and (max-width: 600px) {
    .collection-minimal__container {
      padding: 40px 20px 80px;
    }

    .collection-minimal__header {
      margin-bottom: 40px;
    }

    .collection-minimal__products {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .collection-minimal__product-image {
      border-radius: 12px;
      margin-bottom: 16px;
    }

    .collection-minimal__product-title {
      font-size: 1.1rem;
    }
  }
</style>

{% schema %}
{
  "name": "Minimal Collection",
  "tag": "section",
  "class": "collection-minimal-section"
}
{% endschema %}
